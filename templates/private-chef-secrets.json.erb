{
  "veil": {
    "type": "Veil::CredentialCollection::ChefSecretsFile",
    "version": 2,
    "hasher": {
      "type": "Veil::Hasher::PBKDF2",
      "secret": "<%= @veil_hasher_secret %>",
      "salt": "<%= @veil_hasher_salt %>",
      "iterations": 10000,
      "hash_function": "OpenSSL::Digest::SHA512"
    },
    "cipher": {
      "type": "Veil::Cipher::V2",
      "key": "<%= @veil_cipher_key %>",
      "iv": "<%= @veil_cipher_iv %>"
    },
    "credentials": "<%= @veil_credentials %>"
  }
}
