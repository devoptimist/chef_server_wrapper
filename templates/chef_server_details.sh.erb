#!/bin/bash
set -eu -o pipefail
<% if @org != "" && @user != "" %>
  VAR1=$(cat <<EOF
{
  "validation_pem": <%= @validation_pem %>,
  "validation_client_name": "<%= @org %>-validation",
  "client_pem": <%= @client_pem %>,
  "org_url": "https://<%= @fqdn %>/organizations/<%= @org %>",
  "base_url": "https://<%= @fqdn %>",
  "node_name": "<%= @user %>"
}
EOF
  )
<% else %>
  VAR1=$(cat <<EOF
{
  "validation_pem": "",
  "validation_client_name": "",
  "client_pem": "",
  "org_url": "",
  "base_url": "https://<%= @fqdn %>",
  "node_name": ""
}
EOF
  )
<% end %>

echo "${VAR1}" | jq '.'
